@{}
<div class="card shadow-lg bg-gradient-dark">
    <div class="card-header bg-gradient-dark">
        <h1 class="text-gradient text-primary ubuntu-bold">Jobs</h1>
    </div>
    <div class="card-body p-3">
        <table class="table table-borderless table-hover table-striped">
            <thead>
            <tr>
                <th class="text-gradient text-primary ubuntu-bold">ID</th>
                <th class="text-gradient text-primary ubuntu-bold">Job Title</th>
                <th class="text-gradient text-primary ubuntu-bold">Timeframe</th>
                <th class="text-gradient text-primary ubuntu-bold">Priority</th>
                <th class="text-gradient text-primary ubuntu-bold">Actual Cost</th>
                <th class="text-gradient text-primary ubuntu-bold">Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (ViewBag.Jobs != null)
            {
                @foreach (var job in ViewBag.Jobs)
                {
                    <tr>
                        <td class="text-white ubuntu">@job.JobId</td>
                        <td class="text-white ubuntu">@job.JobTitle</td>
                        <td class="text-white ubuntu">@job.StartDate.ToString("d") - @job.EndDate.ToString("d")</td>
                        <td class="text-white ubuntu">@job.Priority</td>
                        <td class="text-white ubuntu">@job.ActualCost.ToString("C")</td>
                        <td>
                            @Html.ActionLink("", "JobDetails", "Dashboard", new {id = job.JobId}, new {@class="m-3 btn-tooltip fa-solid fa-list text-gradient text-info", title=$"View {job.JobTitle}'s Details"})
                            <a href="#" class="m-3 btn-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete @job.JobTitle" data-container="body" data-animation="true"><i class="fa-regular fa-trash-can text-gradient text-danger"></i></a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>