@{
    var users = ViewBag.Users;
}
<div class="card shadow-lg bg-gradient-dark">
    <div class="card-header bg-gradient-dark">
        <h1 class="text-gradient text-primary ubuntu-bold">Users</h1>
    </div>
    <div class="card-body p-3">
        <table class="table table-borderless table-hover table-striped">
            <thead>
            <tr>
                <th class="text-gradient text-primary ubuntu-bold">ID</th>
                <th class="text-gradient text-primary ubuntu-bold">UserName</th>
                <th class="text-gradient text-primary ubuntu-bold">Email</th>
                <th class="text-gradient text-primary ubuntu-bold">Name</th>
                <th class="text-gradient text-primary ubuntu-bold">Is Active</th>
                <th class="text-gradient text-primary ubuntu-bold">Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (users != null)
            {
                @foreach (var user in users)
                {
                    <tr>
                        <td class="text-white ubuntu">@user.Id</td>
                        <td class="text-white ubuntu">@user.UserName</td>
                        <td class="text-white ubuntu">@user.Email</td>
                        <td class="text-white ubuntu">@user.FirstName @user.LastName</td>
                        <td class="text-white ubuntu">@user.IsActive</td>
                        <td>
                            @Html.ActionLink("", "UserDetails", "Dashboard", new {id = user.Id}, new {@class="m-3 btn-tooltip fa-solid fa-list text-gradient text-info", title=$"View {user.FirstName}'s Profile"})
                            <a asp-action="UserDelete" asp-controller="Dashboard" asp-route-id="@user.Id" asp-area="Admin" class="m-3 btn-tooltip" title="Delete @user.UserName"><i class="fa-regular fa-trash-can text-gradient text-danger"></i></a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>