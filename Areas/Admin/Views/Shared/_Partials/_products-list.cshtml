@{}
<div class="card shadow-lg bg-gradient-dark">
    <div class="card-header bg-gradient-dark">
        <h1 class="text-gradient text-primary ubuntu-bold">Products</h1>
    </div>
    <div class="card-body p-3">
        <table class="table table-borderless table-hover table-striped">
            <thead>
            <tr>
                <th class="text-gradient text-primary ubuntu-bold">ID</th>
                <th class="text-gradient text-primary ubuntu-bold">Name</th>
                <th class="text-gradient text-primary ubuntu-bold">UPC</th>
                <th class="text-gradient text-primary ubuntu-bold">Price</th>
                <th class="text-gradient text-primary ubuntu-bold">Quantity</th>
                <th class="text-gradient text-primary ubuntu-bold">Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (ViewBag.Products != null)
            {
                @foreach (var product in ViewBag.Products)
                {
                    <tr>
                        <td class="text-white ubuntu">@product.ProductId</td>
                        <td class="text-white ubuntu">@product.TruncateWords(@product.Name, 2)</td>
                        <td class="text-white ubuntu">@product.UPC</td>
                        <td class="text-white ubuntu">@product.Price.ToString("C")</td>
                        <td class="text-white ubuntu">@product.QuantityInStock</td>
                        <td>
                            @Html.ActionLink("", "ProductDetails", "Dashboard", new {id = product.ProductId}, new {@class="m-3 btn-tooltip fa-solid fa-list text-gradient text-info", title=$"View {product.Name}'s Profile"})
                            @Html.ActionLink("", "ProductUpdatePage", "Dashboard", new {id = product.ProductId}, new {@class="m-3 btn-tooltip fa-regular fa-pen-to-square text-gradient text-primary", title=$"Edit {product.Name}'s Profile"})
                            <a  class="m-3 btn-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete @product.Name" data-container="body" data-animation="true"><i class="fa-regular fa-trash-can text-gradient text-danger"></i></a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>