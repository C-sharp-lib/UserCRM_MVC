<div class="card shadow-lg bg-gradient-dark">
    <div class="card-header bg-gradient-dark">
        <h1 class="text-gradient text-primary ubuntu-bold">Customers</h1>
    </div>
    <div class="card-body p-3">
        <table class="table table-borderless table-hover table-striped">
            <thead>
            <tr>
                <th class="text-gradient text-primary ubuntu-bold">ID</th>
                <th class="text-gradient text-primary ubuntu-bold">Type</th>
                <th class="text-gradient text-primary ubuntu-bold">Name</th>
                <th class="text-gradient text-primary ubuntu-bold">Phone</th>
                <th class="text-gradient text-primary ubuntu-bold">Fax</th>
                <th class="text-gradient text-primary ubuntu-bold">Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (ViewBag.Customers != null)
            {
                @foreach (var customer in ViewBag.Customers)
                {
                    <tr>
                        <td class="text-white ubuntu">@customer.CustomerId</td>
                        <td class="text-white ubuntu">@customer.CustomerType</td>
                        <td class="text-white ubuntu">@customer.Name</td>
                        <td class="text-white ubuntu">@customer.Phone</td>
                        <td class="text-white ubuntu">@customer.Fax</td>
                        <td>
                            @Html.ActionLink("", "CustomerDetails", "Dashboard", new {id = customer.CustomerId}, new {@class="m-3 btn-tooltip fa-solid fa-list text-gradient text-info", title=$"View {customer.Name}'s Profile"})
                            <a asp-action="DeleteCustomer" asp-controller="Dashboard" asp-route-id="@customer.CustomerId" asp-area="Admin" class="m-3 btn-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete @customer.Name" data-container="body" data-animation="true"><i class="fa-regular fa-trash-can text-gradient text-danger"></i></a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>