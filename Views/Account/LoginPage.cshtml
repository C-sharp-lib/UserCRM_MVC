@model UserCRM.DTO.LoginDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-11 mb-11">
    <div class="col-12 col-md-6 offset-md-3">
        <div class="card shadow-lg bg-gradient-dark">
            <div class="card-header bg-gradient-dark">
                <h1 class="text-gradient text-primary ubuntu-bold">Login</h1>
            </div>
            <div class="card-body p-3">
                <form asp-action="LoginUser" asp-controller="Account" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="text-gradient text-primary ubuntu-bold">Email</label>
                        <input type="email" class="form-control form-control-lg color-background bg-gradient-dark text-white ubuntu" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="text-gradient text-primary ubuntu-bold">Password</label>
                        <input type="password" class="form-control form-control-lg color-background bg-gradient-dark text-white ubuntu" asp-for="Password">
                    </div>
                    <div class="m-3">
                        <input type="submit" class="btn bg-gradient-info" value="Login">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>