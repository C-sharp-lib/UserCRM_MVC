<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>UserCRM</title>
    <link rel="icon" href="~/img/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/assets/css/soft-design-system-pro.css">
    <script src="~/Admin/js/fullcalendar-scheduler/dist/index.global.min.js"></script>
    <link rel="stylesheet" href="~/Admin/css/admin.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/UserCRM.styles.css" asp-append-version="true"/>
</head>
<body class="bg-gradient-dark">
<div class="container">
<nav
    class="navbar navbar-expand-lg bg-gradient-dark navbar-dark  blur blur-rounded top-0  z-index-3 shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
    <div class="container px-0">
        <a class="navbar-brand font-weight-bolder ms-sm-3 text-white" href="" rel="tooltip"
           title="Created By Kevin Stradtman" data-placement="bottom">
            UserCRM <img src="~/img/logo.png" height="50" width="50"/>
        </a>
        <button class="navbar-toggler shadow-none ms-md-2" type="button" data-bs-toggle="collapse"
                data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="nav">
            <div class="collapse navbar-collapse" id="navigation">
                <div class="d-flex justify-content-start gap-2">

                    <div class="dropdown m-3">
                        <a class="btn bg-gradient-primary dropdown-toggle ubuntu-bold" id="dropdownAccountA"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Account
                        </a>
                        <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownAccountA">
                            @if (ViewBag.user == null)
                            {
                                <li><a class="dropdown-item ubuntu-bold" asp-action="RegisterPage" asp-controller="Account">Register</a></li>
                                <li><a class="dropdown-item ubuntu-bold" asp-action="LoginPage" asp-controller="Account">Login</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item ubuntu-bold" asp-action="Logout" asp-controller="Account">Logout</a></li>
                            }
                        </ul>
                    </div>
                    @if (ViewBag.user != null)
                    {
                        <div class="dropdown m-3">
                            <a class="btn bg-gradient-primary dropdown-toggle ubuntu-bold" id="dropdownAdmin"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownAdmin">
                                <li><a class="dropdown-item ubuntu-bold" asp-action="Index" asp-controller="Dashboard" asp-area="Admin">Admin Home</a></li>
                                <li><a class="dropdown-item ubuntu-bold" asp-action="AddUserPage" asp-controller="Dashboard" asp-area="Admin">Add User</a></li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</nav>
</div>
<div class="container-fluid mb-5">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer pt-5 mt-11">
    <hr class="horizontal dark mb-5">
    <div class="container">
        <div class=" row">
            <div class="col-md-12 mb-4 ms-auto">
                <div>
                    <h6 class="text-gradient text-primary ubuntu-bold">UserCRM</h6>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="text-center">
                    <p class="my-4 text-sm text-gradient text-info ubuntu-bold">
                        All rights reserved. Copyright © <script>
                            document.write(new Date().getFullYear())
                        </script> Created by Kevin Stradtman
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/assets/js/core/popper.min.js" type="text/javascript"></script>
<script src="~/assets/js/core/bootstrap.min.js" type="text/javascript"></script>
<script src="~/assets/js/plugins/perfect-scrollbar.min.js" type="text/javascript"></script>
<script src="~/assets/js/plugins/typedjs.js"></script>
<script src="~/assets/js/plugins/moment.min.js"></script>
<script src="~/assets/js/plugins/nouislider.min.js"></script>
<script src="~/assets/js/plugins/glidejs.min.js"></script>
<script src="~/assets/js/plugins/choices.min.js" type="text/javascript"></script>
<script src="~/assets/js/plugins/chartjs.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.0.1/vue.min.js" type="text/javascript"></script>
<script src="~/js/card-vue.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.3.5/js/swiper.min.js" type="text/javascript"></script>
<!-- Control Center for Soft UI Design System: parallax effects, scripts for the example pages etc -->
<script src="~/assets/js/soft-design-system-pro.min.js" type="text/javascript"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>